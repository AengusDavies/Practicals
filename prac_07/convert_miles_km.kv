BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 42
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(int(input_number.text, 1))
            Button:
                text: 'Down'
                on_press: app.handle_increment(int(input_number.text, -1))
    Button:
        text: 'Convert miles to km'
    Label:
        text: app.output_text